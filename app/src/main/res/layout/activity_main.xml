<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    <TextView
        android:text="@string/Test_Greeting"
        android:id="@+id/greetingText"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        style="@style/Main"
        tools:ignore="RtlSymmetry" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <ScrollView

        android:id="@+id/scroll"
        style="@style/MainActivity"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:fillViewport="true"
        android:padding="10dp"
        android:scrollbars="horizontal"
        android:translationY="-50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/firstimagediscription"

                    android:src="@drawable/homework_1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/firstimagediscription"

                    android:src="@drawable/quiz_1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/firstimagediscription"

                    android:src="@drawable/calender_1" />

            </LinearLayout>
        </LinearLayout>


    </ScrollView>


</LinearLayout>